use_frameworks!
plugin 'cocoapods-binary'
keep_source_code_for_prebuilt_frameworks!
enable_bitcode_for_prebuilt_frameworks!

target 'Pterodactyl' do
  platform :ios, '12.0'
  pod 'PureLayout', '~> 3.1.4'
  pod 'DeviceKit', '~> 2.0.0'
  pod 'RxSwift', '~> 5.0.0'
  pod 'RxCocoa', '~> 5.0.0'
  pod 'PromiseKit', '~> 6.10.0'
  pod 'CodableFirebase', '~> 0.2.1'
end

target 'Pterodactyl WatchKit Extension' do
  platform :watchos, '5.0'
  pod 'CodableFirebase', '~> 0.2.1'
  pod 'RxSwift', '~> 5.0.0'
  pod 'RxCocoa', '~> 5.0.0'
end
